<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView for the question image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!--  this is row 1   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/questionImageView1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_qs"
                android:tag="circle"
                android:layout_marginTop="60dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/questionImageView2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/rectangle_qs"
                android:tag="rectangle"
                android:layout_marginTop="60dp"
                android:clickable="true" />

        </LinearLayout>
        <!--  this is row 2   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/questionImageView3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/square_qs"
                android:tag="square"
                android:layout_marginTop="60dp"
                android:clickable="true" />

            <ImageView
                android:id="@+id/questionImageView4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/triangle_qs"
                android:tag="triangle"
                android:layout_marginTop="60dp"
                android:clickable="true" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
