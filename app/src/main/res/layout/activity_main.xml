<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Welcome text and Select Option text -->
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top section with royal blue background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/app_background_3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </LinearLayout>

        <!-- Textview for "Select Option" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="--SELECT AN OPTION--"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- ScrollView for CardViews -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- CardViews with clickable images -->


                <!-- First CardView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:elevation="15dp"
                    android:backgroundTint="#45B3E0"
                    app:cardCornerRadius="50dp">

                    <!-- Image inside CardView -->
                    <ImageView
                        android:id="@+id/level1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/level1_main"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true" />

                </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="3 - 4 Yrs"
                        android:textColor="#FFFF00"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="20sp"
                    />



            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:elevation="15dp"
                android:backgroundTint="#45B3E0"
                app:cardCornerRadius="50dp">

                <!-- Image inside CardView -->
                <ImageView
                    android:id="@+id/level2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/level2_main"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="4 - 5 Yrs"
                android:textColor="#FFFF00"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:elevation="15dp"
                android:backgroundTint="#45B3E0"
                app:cardCornerRadius="50dp">

                <!-- Image inside CardView -->
                <ImageView
                    android:id="@+id/level3"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/level3_main"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="5 - 6 Yrs"
                android:textColor="#FFFF00"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:elevation="15dp"
                android:backgroundTint="#45B3E0"
                app:cardCornerRadius="50dp">

                <!-- Image inside CardView -->
                <ImageView
                    android:id="@+id/music"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/music_main"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Play With Music"
                android:textColor="#FFFF00"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginBottom="40dp"
                />



            </LinearLayout>

    </ScrollView>
</RelativeLayout>
